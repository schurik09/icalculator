<Window x:Class="wpf_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="140" Width="450" MinHeight="140" MaxHeight="140" MinWidth="250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="85"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="cExpression" Height="23" Margin="5,28,10,0" TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="cExpression_TextChanged" RenderTransformOrigin="0.5,0.5" HorizontalContentAlignment="Right" Grid.Column="1" VerticalContentAlignment="Center"/>
        <Label Content="Expression:" HorizontalAlignment="Left" Margin="10,25,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.395,-0.885" Width="75" Height="26"/>
        <Label Content="Result:" HorizontalAlignment="Left" Margin="10,56,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.237,-0.923" Width="75" Height="26"/>
        <Label x:Name="cResult" Content="=" Margin="5,56,82,0" VerticalAlignment="Top" RenderTransformOrigin="-1.079,0.269" Height="26" Grid.Column="1"/>
        <Button x:Name="cCalculate" Content="Calculate" Margin="0,58,10,0" VerticalAlignment="Top" Width="67" RenderTransformOrigin="0.96,-2.273" Click="cCalculate_Click" Height="22" Grid.Column="1" HorizontalAlignment="Right" IsDefault="True"/>
    </Grid>
</Window>
